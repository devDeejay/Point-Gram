<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@color/whiteColor"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/alarm_title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bring Vegetables"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alarm_location_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Alpha 1, C Market, Greater Noida"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/alarm_radius_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radius Set : 200 meters"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/alarm_Description_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People Involved : 3"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_marginTop="10dp"/>

</LinearLayout>